#!/usr/bin/env bash

PASS_TLINT=true
PASS_PHPCS=true
PASS_PHPCSFIXER=true
PASS_PINT=true

. ${BIN_DIR}/actions/fix-tlint
if [ $? -ne 0 ]; then
  PASS_TLINT=false
fi

. ${BIN_DIR}/actions/fix-phpcs
if [ $? -ne 0 ]; then
  PASS_PHPCS=false
fi

. ${BIN_DIR}/actions/fix-phpcsfixer
if [ $? -ne 0 ]; then
  PASS_PHPCSFIXER=false
fi

. ${BIN_DIR}/actions/fix-pint
if [ $? -ne 0 ]; then
  PASS_PINT=false
fi

if [ $PASS_TLINT == false ] || [ $PASS_PHPCS == false ] || [ $PASS_PHPCSFIXER == false ] || [ $PASS_PINT == false ]; then
  exit 1
else
  exit 0
fi
