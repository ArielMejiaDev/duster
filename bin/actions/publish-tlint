#!/usr/bin/env bash

if [ -f ./tlint.json ]; then
    printf "\ntlint.json already exists; skipping.\n"
else
    printf "\nSaving default Tlint config to tlint.json.\n"
    cat << Template > ./tlint.json
{
    "preset": "tighten",
    "disabled": [],
    "excluded": []
}
Template

    cat tlint.json
fi
