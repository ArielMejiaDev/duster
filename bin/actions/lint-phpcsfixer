#!/usr/bin/env bash

set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
SYM_DIR="$( dirname "$( readlink ${BASH_SOURCE[0]} )" )"
REAL_DIR="${DIR}/${SYM_DIR}"

if [[ -f "./.php_cs.dist" ]]; then
    ./vendor/bin/php-cs-fixer fix --using-cache=no --dry-run --diff
else
    ./vendor/bin/php-cs-fixer fix --using-cache=no --dry-run --diff --config=${REAL_DIR}/../../configs/.php_cs.dist
fi

