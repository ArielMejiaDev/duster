#!/usr/bin/env bash

set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
SYM_DIR="$( dirname "$( readlink ${BASH_SOURCE[0]} )" )"
REAL_DIR="${DIR}/${SYM_DIR}"

if [[ -f "./.phpcs.xml.dist" ]]; then
    ./vendor/bin/phpcbf
else
    ./vendor/bin/phpcbf --standard=${REAL_DIR}/../../configs/.phpcs.xml.dist
fi
