{
    "name": "tightenco/duster",
    "description": "Automatic configuration for Laravel apps to apply Tighten's standard linting & code standards.",
    "keywords": [
        "tightenco",
        "duster",
        "php",
        "code style",
        "laravel"
    ],
    "homepage": "https://github.com/tighten/duster",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Stauffer",
            "email": "matt@tighten.co",
            "homepage": "https://tighten.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.11",
        "laravel/pint": "^1.2",
        "squizlabs/php_codesniffer": "^3.7",
        "tightenco/tlint": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Tighten\\Duster\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tighten\\Duster\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/duster"
    ]
}
