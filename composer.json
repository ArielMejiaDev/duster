{
    "name": "tightenco/duster",
    "description": "Automatic configuration for Laravel apps to apply Tighten's standard linting & code standards.",
    "keywords": [
        "tightenco",
        "duster",
        "php",
        "phpcs",
        "code style",
        "laravel"
    ],
    "homepage": "https://github.com/tighten/duster",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Stauffer",
            "email": "matt@tighten.co",
            "homepage": "https://tighten.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "tightenco/tighten-coding-standard": "^1.0",
        "tightenco/tlint": "^6.0"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/duster"
    ]
}
