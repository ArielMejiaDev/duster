{
    "name": "tightenco/duster",
    "description": "Automatic configuration for Laravel apps to apply Tighten's standard linting & code standards.",
    "keywords": [
        "tightenco",
        "duster",
        "php",
        "code style"
    ],
    "homepage": "https://github.com/tighten/duster",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Stauffer",
            "email": "matt@tighten.co",
            "homepage": "https://tighten.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "bamarni/composer-bin-plugin": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "post-install-cmd": ["@composer bin all install --ansi --no-interaction --quiet"],
        "post-update-cmd": ["@composer bin all update --ansi --no-interaction --quiet"]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/duster-tlint-lint",
        "bin/duster-tlint-fix"
    ]
}
