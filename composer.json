{
    "name": "tightenco/duster",
    "description": "Automatic configuration for Laravel apps to apply Tighten's standard linting & code standards.",
    "keywords": [
        "tightenco",
        "duster",
        "php",
        "code style"
    ],
    "homepage": "https://github.com/tighten/duster",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Stauffer",
            "email": "matt@tighten.co",
            "homepage": "https://tighten.co",
            "role": "CTO"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "tightenco/tlint": "^5.0"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs && vendor/bin.tlint",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes && vendor/bin/tlint format"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
