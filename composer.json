{
    "name": "tightenco/duster",
    "description": "Automatic configuration for Laravel apps to apply Tighten's standard linting & code standards.",
    "keywords": [
        "tightenco",
        "duster",
        "php",
        "code style",
        "laravel"
    ],
    "homepage": "https://github.com/tighten/duster",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/tighten/duster/issues",
        "source": "https://github.com/tighten/duster"
    },
    "authors": [
        {
            "name": "Matt Stauffer",
            "email": "matt@tighten.co",
            "homepage": "https://tighten.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.12",
        "laravel-zero/framework": "^9.2",
        "laravel/pint": "^1.2",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/termwind": "^1.14",
        "pestphp/pest": "^1.21.3",
        "spatie/laravel-ray": "^1.31",
        "squizlabs/php_codesniffer": "^3.7",
        "tightenco/tlint": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "laravel/pint": "source",
            "*": "dist"
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/duster"]
}
