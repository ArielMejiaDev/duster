{
    "preset": "laravel",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        },
        "php_unit_test_annotation": {
            "style": "annotation"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha",
            "imports_order": [
                "const",
                "class",
                "function"
            ]
        },
        "blank_line_between_import_groups": true,
        "explicit_string_variable": true,
        "simple_to_complex_string_variable": true
    },
    "exclude": [
        "tests/Fixtures"
    ]
}
